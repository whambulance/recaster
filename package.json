{
  "name": "@whambulance/recaster",
  "version": "1.1.3",
  "description": "2D Ray reflection engine",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/whambulance/recaster.git"
  },
  "keywords": [
    "laser-reflection",
    "laser",
    "raycast",
    "engine",
    "reflection",
    "2d",
    "ray",
    "cast"
  ],
  "author": "whambulance",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/whambulance/recaster/issues"
  },
  "homepage": "https://github.com/whambulance/recaster#readme",
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.2",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.5.4"
  },
  "imports": {
    "@/*": "./src/*"
  },
  "dependencies": {
    "decimal.js": "^10.3.1",
    "timsort": "^0.3.0"
  }
}
