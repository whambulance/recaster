{
  "name": "@whambulance/recaster",
  "version": "1.1.4",
  "description": "2D Ray reflection engine",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "umd:main": "dist/umd/index.js",
  "types": "dist/types/index.d.js",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "npm run build:cjs && npm run build:esm && npm run build:umd && npm run build:types",
    "build:cjs": "node tools/cleanup cjs && tsc -p config/tsconfig.cjs.json",
    "build:esm": "node tools/cleanup esm && tsc -p config/tsconfig.esm.json",
    "build:umd": "node tools/cleanup umd && webpack --config config/webpack.config.js",
    "build:types": "node tools/cleanup types && tsc -p config/tsconfig.types.json",
    "clean": "node tools/cleanup",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/whambulance/recaster.git"
  },
  "keywords": [
    "laser-reflection",
    "laser",
    "raycast",
    "engine",
    "reflection",
    "2d",
    "ray",
    "cast"
  ],
  "author": "Jack Brooker <whambulance>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/whambulance/recaster/issues"
  },
  "homepage": "https://github.com/whambulance/recaster#readme",
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.2",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.5.4",
    "webpack-cli": "^4.9.2",
    "ts-loader": "^9.2.8",
    "webpack": "^5.72.0"
  },
  "imports": {
    "@/*": "./src/*"
  },
  "dependencies": {
    "decimal.js": "^10.3.1",
    "timsort": "^0.3.0"
  }
}
